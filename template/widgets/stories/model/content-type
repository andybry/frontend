  <field-group name="stories-widget-default-fields">

    <field name="sourceDefault" type="enumeration">
      <ui:label>Source</ui:label>
      <ui:description>This option is used to select the source for the stories widget.</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>This option is used to select the source for the stories widget.</p>
      </doc:description>
      <enumeration value="desked">
        <ui:label>Desked content</ui:label>
        <doc:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Selecting
            <em>Desked content</em>
            tells the widget to fetch content which are desked in a particular group.
          </p>
        </doc:description>
      </enumeration>
      <enumeration value="automatic">
        <ui:label>Automatic list</ui:label>
        <doc:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Selecting
            <em>Automatic list</em>
            tells the widget to fetch automatically.
          </p>
        </doc:description>
      </enumeration>
      <enumeration value="fallback">
        <ui:label>Desked content with fallback to list</ui:label>
        <doc:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Selecting
            <em>Desked content with fallback to list</em>
            tells the widget to fetch contents automatically if
            the specified group does not contain contents.
          </p>
        </doc:description>
      </enumeration>
      <enumeration value="taggedArticles">
        <ui:label>Tagged Articles</ui:label>
        <doc:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Selecting
            <em>Tagged Articles</em>
            tells the widget to fetch articles marked with a particular tag.
          </p>
        </doc:description>
      </enumeration>
      <ui:value-if-unset>desked</ui:value-if-unset>
    </field>
    <field name="beginDefault" type="number">
      <ui:label>Begin</ui:label>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>The begin index of displaying contents.</p>
      </doc:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>##</format>
      <ui:value-if-unset>1</ui:value-if-unset>
    </field>

    <field name="numberOfItemsDefault" type="number">
      <ui:label>Number of items</ui:label>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>The maximum number of items to be displayed</p>
      </doc:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>20</maximum>
      </constraints>
      <format>##</format>
      <ui:value-if-unset>5</ui:value-if-unset>
    </field>

    <field name="showSectionTitleDefault" type="boolean">
      <ui:label>Show section name as title</ui:label>
      <ui:description>This field tells whether to show or not the home section of the first article on top of the
        widget,
        before rendering the content items.
      </ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>This field tells whether to show or not the home section of the first article on top of the widget,
          before rendering the content items.
        </p>
      </doc:description>
      <ui:boolean-label value="true">Show the name of the section</ui:boolean-label>
      <ui:boolean-label value="false">Don't show the section name</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>

    <field name="selectSectionNameDefault" type="enumeration">
      <ui:label>Section name</ui:label>
      <ui:description>This option is used to select which section name to display.</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>This option is used to select which section name to display.</p>
      </doc:description>
      <enumeration value="current">
        <ui:label>Current section</ui:label>
      </enumeration>
      <enumeration value="first">
        <ui:label>First article home section</ui:label>
      </enumeration>
      <ui:value-if-unset>current</ui:value-if-unset>
    </field>

    <field name="maxCharactersDefault" type="number">
      <ui:label>Maximum Characters</ui:label>
      <ui:description>Maximum number of characters of the lead text that will be displayed.
        The widget will cut off the text around the character limit,
        cutting off at the first space that can be found after the max character.
        The widget will not cut off words.
        If the lead text is shortened an ellipsis will be shown, putting three dots behind the text (...).
        If no maxCharacter is defined, the complete lead will be displayed (default setting)
      </ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Maximum number of characters of the lead text that will be displayed.
          The widget will cut off the text around the character limit,
          cutting off at the first space that can be found after the max character.
          The widget will not cut off words.
          If the lead text is shortened an ellipsis will be shown, putting three dots behind the text (...).
          If no maxCharacter is defined, the complete lead will be displayed (default setting).
        </p>
      </doc:description>
      <constraints>
        <minimum>1</minimum>
      </constraints>
      <format>###</format>
    </field>

    <field name="headingSizeDefault" type="number">
      <ui:label>Heading size</ui:label>
      <ui:description>Size of the header to be used to display the article title.
        This is measured from 1-6, matching the HTML elements h1 to h6.
      </ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Size of the header to be used to display the article title.
          This is measured from 1-6, matching the HTML elements h1 to h6.
        </p>
      </doc:description>
      <constraints>
        <minimum>1</minimum>
        <maximum>6</maximum>
      </constraints>
      <format>#</format>
      <ui:value-if-unset>3</ui:value-if-unset>
    </field>

    <field name="readMoreDefault" type="basic" mime-type="text/plain">
      <ui:label>Read more text</ui:label>
      <ui:description>Setting this view option will display the provided string at the end of the lead,
        linking to the article page. Typically this is used to render a link like "Read more...".
        If none is provided, no such link will be displayed
      </ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Setting this view option will display the provided string at the end of the lead,
          linking to the article page. Typically this is used to render a link like "Read more...".
          If none is provided, no such link will be displayed.
        </p>
      </doc:description>
    </field>

    <field name="imagePositionDefault" type="enumeration">
      <ui:label>Image Position</ui:label>
      <ui:description>Position of the image relative to the lead text. Valid options are left or right.</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Position of the image relative to the lead text. Valid options are left or right.</p>
      </doc:description>
      <enumeration value="left">
        <ui:label>Left</ui:label>
      </enumeration>
      <enumeration value="right">
        <ui:label>Right</ui:label>
      </enumeration>
      <enumeration value="top">
        <ui:label>Top</ui:label>
      </enumeration>
      <ui:value-if-unset>left</ui:value-if-unset>
    </field>

    <field name="showCommentsDefault" type="boolean">
      <ui:label>Show comments</ui:label>
      <ui:description>Enabling this option adds the number of comments to the headline</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Enabling this option adds the number of comments to the headline.</p>
      </doc:description>
